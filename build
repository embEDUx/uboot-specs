#! /bin/bash -e

#####################
# Configuration     # 							     
#####################

### Sources
SRC_DIR="/var/tmp/embedux/download"
UBOOT_URL="http://ftp.denx.de/pub/u-boot"
UBOOT_FILE="u-boot-2015.01-rc1.tar.bz2"

#####################
# Script            #
#####################

### Prepare folder
mkdir -p  ${SRC_DIR}

### Uboot sources
echo "Downloading ${UBOOT_FILE} from ${UBOOT_URL}"
wget -N ${UBOOT_URL}/${UBOOT_FILE} -P ${SRC_DIR}

echo "Extracting ${UBOOT_FILE}"
tar -xf ${SRC_DIR}/${UBOOT_FILE} --strip 1
